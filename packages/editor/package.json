{
  "name": "@tloncorp/editor",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "tsc": "tsc --noEmit",
    "build": "vite build && pnpm post-build",
    "post-build": "node ../../node_modules/@10play/tentap-editor/scripts/buildEditor.js ./dist/index.html",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix --quiet",
    "lint:format": "prettier src/ --write"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix",
      "pnpm lint:format"
    ]
  },
  "dependencies": {
    "@tiptap/core": "^2.3.0",
    "@tiptap/extension-code-block": "^2.3.0",
    "@tiptap/pm": "^2.3.0",
    "@tiptap/react": "^2.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.50.0",
    "eslint-plugin-prettier": "^5.0.0",
    "typescript": "^5.1.3",
    "vite": "^5.1.6",
    "vite-plugin-singlefile": "^2.0.1",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "@10play/tentap-editor": "~0.5.11"
  }
}
