{
  "name": "@tloncorp/shared",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "preinstall": "rm -f ./tsconfig.tsbuildinfo",
    "dev": "pnpm build -- --watch",
    "dev:migrations": "concurrently \"pnpm watch-migrations\" \"pnpm run dev\"",
    "test": "vitest",
    "types": "tsc",
    "lint:format": "prettier src/ --write",
    "lint:all": "pnpm lint:format",
    "generate": "pnpm generate:migration",
    "generate:migration": "node reset-migrations",
    "watch-migrations": "pnpm generate:migration -- --watch"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.28.14",
    "@urbit/api": "^2.2.0",
    "big-integer": "^1.6.52",
    "drizzle-orm": "0.30.5",
    "sorted-btree": "^1.8.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "better-sqlite3": "^9.4.3",
    "drizzle-kit": "^0.20.14",
    "tsup": "^8.0.1",
    "typescript": "5.1.3",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "@tiptap/core": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "@tiptap/react": "^2.0.3",
    "@tiptap/suggestion": "^2.0.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.9.5"
  }
}
