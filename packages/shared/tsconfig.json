{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "system",
    "declaration": true,
    "declarationMap": true,
    "": true,
    "rootDir": "./src",
    "outDir": "dist",
    "composite": true,
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "src/**/*.sql"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}