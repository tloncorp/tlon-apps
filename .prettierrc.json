{
  "bracketSpacing": true,
  "printWidth": 80,
  "proseWrap": "always",
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": ["*.md"],
      "options": {
        "tabWidth": 4,
        "printWidth": 1000
      }
    },
    {
      "files": ["package*.json"],
      "options": {
        "printWidth": 1000
      }
    },
    {
      "files": ["*.yml"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "semi": true,
  "trailingComma": "es5",
  "importOrder": ["<THIRD_PARTY_MODULES>", "^@/(.*)", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
