{
  "cli": {
    "version": ">= 3.8.1",
    "promptToConfigurePushNotifications": false,
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "pnpm": "9.0.5",
      "node": "20.11.0"
    },
    "preview": {
      "extends": "base",
      "channel": "preview",
      "autoIncrement": true,
      "env": {
        "APP_VARIANT": "preview",
        "NOTIFY_PROVIDER": "rivfur-livmet",
        "NOTIFY_SERVICE": "tlon-preview-release"
      },
      "android": {
        "resourceClass": "large",
        "gradleCommand": ":app:bundlePreviewRelease"
      },
      "ios": {
        "scheme": "Landscape-preview",
        "image": "macos-sonoma-14.6-xcode-16.0"
      }
    },
    "production": {
      "extends": "base",
      "channel": "production",
      "autoIncrement": true,
      "env": {
        "NOTIFY_PROVIDER": "rivfur-livmet",
        "NOTIFY_SERVICE": "groups-native"
      },
      "android": {
        "resourceClass": "large",
        "gradleCommand": ":app:bundleProductionRelease"
      },
      "ios": {
        "scheme": "Landscape",
        "image": "macos-sonoma-14.6-xcode-16.0"
      }
    },
    "demo": {
      "extends": "base",
      "channel": "demo",
      "distribution": "internal",
      "autoIncrement": true,
      "env": {
        "APP_VARIANT": "preview",
        "NOTIFY_PROVIDER": "wannec-dozzod-marnus",
        "NOTIFY_SERVICE": "tlon-preview-release"
      },
      "android": {
        "gradleCommand": ":app:bundlePreviewRelease",
        "buildType": "apk",
        "image": "latest"
      },
      "ios": {
        "scheme": "Landscape-preview",
        "image": "macos-sonoma-14.6-xcode-16.0"
      }
    },
    "local-testing": {
      "extends": "base",
      "channel": "local",
      "android": {
        "resourceClass": "large",
        "gradleCommand": ":app:assembleProductionRelease",
        "buildType": "apk"
      },
      "ios": {
        "scheme": "Landscape",
        "simulator": true
      }
    },
    "local": {
      "channel": "local",
      "env": {
        "APP_VARIANT": "preview"
      },
      "android": {
        "gradleCommand": ":app:assemblePreviewRelease",
        "buildType": "apk"
      },
      "ios": {
        "scheme": "Landscape-local"
      }
    },
    "e2e": {
      "extends": "base",
      "withoutCredentials": true,
      "ios": {
        "simulator": true,
        "scheme": "Landscape",
        "image": "macos-sonoma-14.6-xcode-16.0"
      },
      "android": {
        "gradleCommand": ":app:bundleProductionRelease",
        "buildType": "apk",
        "image": "latest"
      }
    }
  },
  "submit": {
    "preview": {
      "android": {
        "applicationId": "io.tlon.groups.preview",
        "releaseStatus": "draft",
        "track": "internal",
        "changesNotSentForReview": true
      },
      "ios": {
        "ascAppId": "6477973000",
        "appleTeamId": "XU9PR2N722"
      }
    },
    "production": {
      "android": {
        "applicationId": "io.tlon.groups",
        "releaseStatus": "draft",
        "track": "internal",
        "changesNotSentForReview": true
      },
      "ios": {
        "ascAppId": "6451392109",
        "appleTeamId": "XU9PR2N722"
      }
    }
  }
}
