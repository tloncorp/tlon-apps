{
  "cli": {
    "version": ">= 3.8.1",
    "promptToConfigurePushNotifications": false,
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "pnpm": "9.0.5"
    },
    "preview": {
      "extends": "base",
      "channel": "preview",
      "autoIncrement": true,
      "env": {
        "APP_VARIANT": "preview"
      },
      "android": {
        "gradleCommand": ":app:bundlePreviewRelease"
      },
      "ios": {
        "scheme": "Landscape-preview"
      }
    },
    "production": {
      "extends": "base",
      "channel": "production",
      "autoIncrement": true,
      "android": {
        "gradleCommand": ":app:bundleProductionRelease"
      },
      "ios": {
        "scheme": "Landscape"
      }
    },
    "demo": {
      "extends": "base",
      "channel": "demo",
      "distribution": "internal",
      "autoIncrement": true,
      "android": {
        "gradleCommand": ":app:bundlePreviewRelease",
        "image": "latest"
      },
      "ios": {
        "scheme": "Landscape-preview",
        "image": "latest"
      }
    },
    "local": {
      "channel": "local",
      "env": {
        "APP_VARIANT": "preview"
      },
      "android": {
        "gradleCommand": ":app:assemblePreviewRelease",
        "buildType": "apk"
      },
      "ios": {
        "scheme": "Landscape-local"
      }
    }
  },
  "submit": {
    "preview": {
      "android": {
        "applicationId": "io.tlon.groups.preview",
        "releaseStatus": "draft",
        "track": "internal",
        "changesNotSentForReview": true
      },
      "ios": {
        "ascAppId": "6477973000",
        "appleTeamId": "XU9PR2N722"
      }
    },
    "production": {
      "android": {
        "applicationId": "io.tlon.groups",
        "releaseStatus": "draft",
        "track": "internal",
        "changesNotSentForReview": true
      },
      "ios": {
        "ascAppId": "6451392109",
        "appleTeamId": "XU9PR2N722"
      }
    }
  }
}
